    },
    {
      "type": "text",
      "data": "常用参数<div><ul><li>-i &nbsp; &nbsp;显示响应头信息</li><li>-d &nbsp; 指定数据</li></ul></div>"
    },
    {
      "type": "text",
      "data": "常用实例"
    },
    {
      "type": "code",
      "language": "sh",
      "data": "curl -XPOST 'http://www.host.com/user' -d @body.json\ncurl -XPOST 'http://www.host.com/user' -d '{\"name\":\"sam\",\"age\":10}'"
    }
  ]
